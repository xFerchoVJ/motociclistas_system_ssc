<div class="min-h-screen flex items-center justify-center p-4 sm:p-6">
  <div class="w-full max-w-md bg-white rounded-lg shadow-2xl overflow-hidden">
    <!-- Fondo decorativo -->
    <div class="bg-[#AB0A3D] h-2"></div>

    <!-- Contenido del formulario -->
    <div class="p-6 sm:p-8">
      <h2 class="text-3xl font-bold text-[#3D3935] text-center mb-6">Iniciar sesión</h2>

      <!-- Mostrar mensaje de alerta si hay credenciales inválidas -->
      <% if alert %>
        <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
          <p class="text-sm text-red-700">
            <%= alert %>
          </p>
        </div>
      <% end %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <!-- Campo de correo electrónico -->
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-[#3D3935] mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 rounded-lg border border-[#3D3935] focus:border-[#AB0A3D] focus:ring-2 focus:ring-[#B68400] outline-none transition duration-200" %>
        </div>

        <!-- Campo de contraseña -->
        <div>
          <%= f.label :password, class: "block text-sm font-medium text-[#3D3935] mb-1" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 rounded-lg border border-[#3D3935] focus:border-[#AB0A3D] focus:ring-2 focus:ring-[#B68400] outline-none transition duration-200" %>
        </div>

        <!-- Recordar sesión -->
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "w-5 h-5 rounded border-[#3D3935] text-[#AB0A3D] focus:ring-[#AB0A3D]" %>
            <%= f.label :remember_me, "Recordarme", class: "ml-2 text-sm text-[#3D3935]" %>
          </div>
        <% end %>

        <!-- Botón de inicio de sesión -->
        <div>
          <%= f.submit "Iniciar sesión", class: "w-full bg-[#AB0A3D] text-white py-3 px-6 rounded-lg font-semibold hover:bg-[#B68400] focus:outline-none focus:ring-2 focus:ring-[#AB0A3D] focus:ring-offset-2 transition duration-200" %>
        </div>
      <% end %>

      <!-- Enlaces adicionales -->
      <div class="mt-6 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
