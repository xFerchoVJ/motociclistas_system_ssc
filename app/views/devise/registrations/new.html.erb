<div class="min-h-screen bg-gradient-to-r from-blue-50 to-blue-100 flex items-center justify-center p-4 sm:p-6">
  <div class="w-full max-w-4xl bg-white rounded-lg shadow-2xl overflow-hidden">
    <!-- Fondo decorativo -->
    <div class="bg-gradient-to-r from-blue-500 to-blue-600 h-2"></div>

    <!-- Contenido del formulario -->
    <div class="p-6 sm:p-8">
      <h2 class="text-3xl font-bold text-gray-800 text-center mb-6">Registrarse</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Sección 1: Información básica -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <%= f.label :nombre, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :nombre, required: true, class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition duration-200" %>
          </div>

          <div>
            <%= f.label :apellido_paterno, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :apellido_paterno, class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition duration-200" %>
          </div>

          <div>
            <%= f.label :apellido_materno, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :apellido_materno, class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition duration-200" %>
          </div>

          <div>
            <%= f.label :curp, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :curp, maxlength: 18, required: true, class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition duration-200" %>
          </div>
        </div>

        <!-- Sección 2: Correo y contraseña -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition duration-200" %>
          </div>

          <div>
            <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <% if @minimum_password_length %>
              <em class="text-xs text-gray-500">(<%= @minimum_password_length %> caracteres mínimo)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition duration-200" %>
          </div>

          <div>
            <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition duration-200" %>
          </div>
        </div>

        <!-- Sección 3: Información adicional -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <%= f.label :estado, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :estado, class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition duration-200" %>
          </div>

          <div>
            <%= f.label :municipio, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :municipio, class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition duration-200" %>
          </div>

          <div>
            <%= f.label :telefono, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :telefono, maxlength: 20, class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition duration-200" %>
          </div>
        </div>

        <!-- Sección 4: Club y contacto de emergencia -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <%= f.label :club_id, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.collection_select :club_id, Club.all, :id, :nombre, { prompt: "Selecciona un Club" }, { class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition duration-200" } %>
          </div>

          <div>
            <%= f.label :contacto_emergencia, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :contacto_emergencia, class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition duration-200" %>
          </div>

          <div>
            <%= f.label :telefono_emergencia, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :telefono_emergencia, maxlength: 20, class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition duration-200" %>
          </div>

          <div class="flex items-center mt-6">
            <%= f.check_box :donador_organos, class: "w-5 h-5 rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
            <%= f.label :donador_organos, class: "ml-2 text-sm text-gray-700" %>
          </div>
        </div>

        <!-- Sección 5: Información médica -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <%= f.label :tipo_sangre, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :tipo_sangre, maxlength: 10, class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition duration-200" %>
          </div>

          <div>
            <%= f.label :alergias, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_area :alergias, rows: 3, class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition duration-200" %>
          </div>

          <div>
            <%= f.label :medicamento_contraindicado, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_area :medicamento_contraindicado, rows: 3, class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition duration-200" %>
          </div>
        </div>

        <!-- Botón de registro -->
        <div class="mt-8">
          <%= f.submit "Registrarse", class: "w-full bg-blue-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200" %>
        </div>
      <% end %>

      <!-- Enlaces adicionales -->
      <div class="mt-6 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>