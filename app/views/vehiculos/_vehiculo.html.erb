<div id="<%= dom_id vehiculo %>" class="bg-white rounded-lg shadow-lg p-6 sm:p-8">
  <h2 class="text-2xl font-bold text-gray-800 mb-6">Detalles del Vehículo</h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
    <div>
      <p class="text-gray-700"><strong class="block text-sm font-medium text-gray-500">Marca:</strong> <%= vehiculo.marca %></p>
    </div>

    <div>
      <p class="text-gray-700"><strong class="block text-sm font-medium text-gray-500">Modelo:</strong> <%= vehiculo.modelo %></p>
    </div>

    <div>
      <p class="text-gray-700"><strong class="block text-sm font-medium text-gray-500">Submarca:</strong> <%= vehiculo.submarca %></p>
    </div>

    <div>
      <p class="text-gray-700"><strong class="block text-sm font-medium text-gray-500">Año:</strong> <%= vehiculo.anio %></p>
    </div>

    <div>
      <p class="text-gray-700"><strong class="block text-sm font-medium text-gray-500">Placa:</strong> <%= vehiculo.placa %></p>
    </div>

    <div>
      <p class="text-gray-700"><strong class="block text-sm font-medium text-gray-500">Estado de emplacamiento:</strong> <%= vehiculo.estado_emplacamiento %></p>
    </div>

    <div>
      <p class="text-gray-700"><strong class="block text-sm font-medium text-gray-500">VIN:</strong> <%= vehiculo.vin %></p>
    </div>

    <div>
      <p class="text-gray-700"><strong class="block text-sm font-medium text-gray-500">Usuario:</strong> <%= vehiculo.user.email %></p>
    </div>
  </div>
</div>