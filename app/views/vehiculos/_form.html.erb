<%= form_with(model: vehiculo, class: "bg-white rounded-lg shadow-lg p-6 sm:p-8") do |form| %>
  <!-- Mostrar errores -->
  <% if vehiculo.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
      <h2 class="font-bold"><%= pluralize(vehiculo.errors.count, "error") %> impidieron guardar este vehículo:</h2>
      <ul class="list-disc list-inside">
        <% vehiculo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Campos del formulario -->
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
    <div>
      <%= form.label :marca, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :marca, class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition duration-200" %>
    </div>

    <div>
      <%= form.label :modelo, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :modelo, class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition duration-200" %>
    </div>

    <div>
      <%= form.label :linea, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :linea, class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition duration-200" %>
    </div>

    <div>
      <%= form.label :placa, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :placa, class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition duration-200" %>
    </div>

    <div>
      <%= form.label :estado_emplacamiento, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :estado_emplacamiento, class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition duration-200" %>
    </div>

    <div>
      <%= form.label :numero_serie, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :numero_serie, class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition duration-200" %>
    </div>

    <div>
      <%= form.label :tipo_servicio, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.select :tipo_servicio,
          options_for_select([["Selecciona una opción", ""], "Particular", "Servicio Público", "Empresa"], vehiculo.tipo_servicio), 
          {}, 
          class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 outline-none transition duration-200" %>
    </div>
  </div>

  <!-- Botón de enviar -->
  <div class="mt-8 text-center">
    <%= form.submit "Guardar Motocicleta", class: "inline-block bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200" %>
  </div>
<% end %>