<div class="min-h-screen bg-gradient-to-r from-blue-50 to-blue-100 p-6 sm:p-8">
  <div class="max-w-3xl mx-auto">
    <!-- Notificación -->
    <% if notice %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
        <%= notice %>
      </div>
    <% end %>

    <!-- Detalles del vehículo -->
    <%= render @vehiculo %>

    <!-- Botones de acciones -->
    <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center">
      <%= link_to "Editar este vehículo", edit_vehiculo_path(@vehiculo), class: "inline-block bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200" %>
      <%= link_to "Volver a vehículos", vehiculos_path, class: "inline-block bg-gray-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition duration-200" %>
      <%= button_to "Eliminar este vehículo", @vehiculo, method: :delete, form: { data: { turbo_confirm: "¿Estás seguro de eliminar este vehículo?" } }, class: "inline-block bg-red-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition duration-200" %>
    </div>
  </div>
</div>