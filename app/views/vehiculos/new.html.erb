    <!-- Botón para volver -->
    <div class="mt-8 text-center">
      <%= link_to "Volver a motocicletas", vehiculos_path, class: "inline-block bg-gray-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition duration-200" %>
    </div>
  </div>
