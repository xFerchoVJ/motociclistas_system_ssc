<% content_for :title, "Detalles de la cita" %>

<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <% if notice.present? %>
    <div class="p-4 mb-6 bg-green-50 rounded-lg text-green-600 text-sm font-medium">
      <%= notice %>
    </div>
  <% end %>

  <h1 class="text-3xl font-bold text-gray-900 mb-6">Detalles de la cita</h1>

  <div class="bg-gray-50 rounded-lg shadow-sm p-6 sm:p-8">
    <%= render @appointment %>

    <div class="mt-8 flex flex-col sm:flex-row gap-4">
      <%= link_to "Volver a citas", admin_appointments_path, class: "px-4 py-2 text-sm font-medium text-white bg-gray-600 rounded-lg hover:bg-gray-700 transition duration-200" %>
      <% if @appointment.status != 'completada'%>
        <%= button_to "Confirmar cita", confirm_appointment_admin_appointment_path(@appointment), method: :patch,
                      class: "px-4 py-2 text-sm font-medium text-white bg-green-600 rounded-lg hover:bg-green-700 transition duration-200" %>
      <% end %>
      
      
    </div>
  </div>
</div>
